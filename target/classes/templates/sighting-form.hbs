{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>Add a Sighting</h1>

    <p>Add sighting here:</p>

    <form action="/sightings" method="post" class="jumbotron">
        <div class="form-group">
            <label for="animalId">Animal</label>
            <select mdb-select md-form colorful-select dropdown-secondary class="form-control" id='animalId' name='animalId' type='text'>
                <option class="text-grey" value=""  class="form-control" disabled selected>Select an Animal</option>
                {{#each animals}}
                    <option value="{{name}}">Name</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="rangerId">Ranger</label>
            <select mdb-select md-form colorful-select dropdown-secondary class="form-control" id='rangerId' name='rangerId' type='text'>
                <option class="text-grey" value="" class="form-control" disabled selected>Select a Ranger</option>
                {{#each rangers}}
                    <option value="{{rangerId}}">Name</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="locationId">Location</label>
            <select mdb-select md-form colorful-select dropdown-secondary class="form-control" id='locationId' name='locationId' type='text'>
                <option class="text-grey" value="" class="form-control" disabled selected>Select a Location</option>
                {{#each locations}}
                    <option value="{{locationId}}">Location</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label for="animalType">Animal Type</label>
            <select mdb-select md-form colorful-select dropdown-secondary id='animalType'  class="form-control" name='animalType' type='text'>
                <option class="text-grey" value="" class="form-control" disabled selected>Select Animal Type</option>
                <option value="animal">Animal</option>
                <option value="endangered">Endangered</option>
            </select>
        </div>
        <button type="submit" class="btn btn-outline-success">Add Sighting</button>
    </form>
{{/partial}}
{{> layout.hbs}}