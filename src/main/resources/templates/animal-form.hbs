{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>Add Healthy Animal</h1>

    <p>Add animal here:</p>

    <form action="/animals" method="post">
        <div class="form-group md-form">
            <label for="name" class="form-control">Animal Name</label>
            <input id="name" name="name" type="text" class="form-control">
        </div>
        <button type="submit" class="btn btn-dark-green">Add Animal</button>
    </form>
{{/partial}}
{{> layout.hbs}}