{{#partial "styles"}}
    <link rel='stylesheet' href='/css/styles.css'>
{{/partial}}
{{#partial "content"}}
    <h1>Add a Ranger</h1>

    <p>Add ranger here:</p>

    <form action="/rangers" method="post" class="jumbotron">
        <div class="form-group">
            <label for="name">Ranger Name</label>
            <input id="name" name="name" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="badge">Tag No</label>
            <input id="badge" name="badge" type="number" class="form-control">
        </div>
        <button type="submit" class="btn btn-outline-success">Add Ranger</button>
    </form>
{{/partial}}
{{> layout.hbs}}